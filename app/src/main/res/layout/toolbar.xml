<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/blue">
  <RelativeLayout
      android:id="@+id/tools_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"

      >
      <ImageView
          android:id="@+id/toolbar_backIcon"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/icon_back"
          android:layout_marginLeft="10dp"
          android:layout_centerVertical="true"
          android:layout_gravity="center_vertical"
          >
      </ImageView>
      <TextView
          android:id="@+id/toolbar_title"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="TOOL BAR TTLE"
          android:gravity="center_vertical"
          android:layout_marginLeft="20dp"
          android:textColor="@color/white"
          android:textSize="14sp"
          android:layout_toLeftOf="@+id/searchIcon"
          android:layout_toRightOf="@id/toolbar_backIcon"
          />
      <ImageView
          android:id="@+id/searchIcon"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/icon_search"
          android:layout_marginRight="10dp"
          android:layout_centerVertical="true"
          android:layout_alignParentEnd="true"

          />

  </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_search"
            android:hint="@string/enter_anything_to_search"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:theme="@style/MyEditTextTheme"
            android:layout_toLeftOf="@id/searchCloseIcon"
            />

        <ImageView
            android:id="@+id/searchCloseIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_close_white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"


            />

    </RelativeLayout>












</androidx.appcompat.widget.LinearLayoutCompat>